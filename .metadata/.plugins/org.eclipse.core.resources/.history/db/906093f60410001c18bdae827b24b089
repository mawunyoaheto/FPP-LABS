package assignment2_3;

/**
 *
 * @author RMK Aheto
 * @version 30 August 2021
 */
public class Prog3 {

	public static void main(String[] args) {

		float var1 = 1.27f;
		float var2 = 3.881f;
		float var3 = 9.6f;

		float sumOfFloat = var1 + var2 + var3;

		System.out.println(
				"The sum of the floating numbers " + var1 + ", " + var2 + ", " + var3 + " as Integer by casting is: "
						+ (int) sumOfFloat);
		System.out.println("The sum to the nearest of the floating numbers " + var1 + ", " + var2 + ", " + var3
				+ " as Integer is: "
				+ Math.round(sumOfFloat));
	}

}
