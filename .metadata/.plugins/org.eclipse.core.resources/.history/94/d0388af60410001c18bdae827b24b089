package assignment2_7;

import prog2_7_Hint.RandomNumbers;

public class Prog7 {

	public static void main(String[] args) {

		String output = "";


		for (int i = 0; i < 2; i++) {

			output = String.format("%16d %12d %11d %10d %n %n", RandomNumbers.getRandomInt(1, 99),
					RandomNumbers.getRandomInt(1, 99), RandomNumbers.getRandomInt(1, 99),
					RandomNumbers.getRandomInt(1, 99));
			output += String.format("%13s %2d %9s %2d %8s %2d %7s %2d %n", "+", RandomNumbers.getRandomInt(1, 99), "+",
					RandomNumbers.getRandomInt(1, 99), "+", RandomNumbers.getRandomInt(1, 99), "+",
					RandomNumbers.getRandomInt(1, 99));
			output += String.format("%16s %12s %11s %13s", "____", "____", "____", "____" + "\n" + "\n" + "\n");

			System.out.println(output);
		}

	}


}
