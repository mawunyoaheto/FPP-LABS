package assignment4_2.closedcurve.good;

public class Test {

	public static void main(String[] args) {

		ClosedCurve[] objects = { new Triangle(4, 5, 6), new Square(3), new Rectangle(3, 7), new Circle(3) };

		String output = "";
		// compute areas
		for (ClosedCurve cc : objects) {
			// System.out.println("The Area of this " + cc.getClass().getSimpleName() + "
			// is: " + cc.computeArea());

			output = String.format("The Area of this %1$s is: %2$s", cc.getClass().getSimpleName(), cc.computeArea());
			System.out.println(output);

		}


	}

}